generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  photo String?
  description String?
  patreonConnection Boolean
  prompts Prompts[] @relation("createdBy")
  favPrompts favPrompts[]
  lastInteraction Prompts[] @relation("interactedUser")
  password String
}


model Prompts {
  id Int @id @default(autoincrement())
  title String
  likes Int
  commentsNum Int
  comments Comments[]
  createdBy User @relation("createdBy",fields:[userId],references: [id])
  thumbnailPhoto String?
  description String
  userId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  interactedUser User @relation("interactedUser",fields: [interactedUserId],references: [id])
  interactedUserId Int

  @@index([userId])
  @@index([interactedUserId])
}

model favPrompts {
id Int @id
promptId Int
user User @relation(fields: [userId],references: [id])
userId Int

@@index([userId])
}

model Comments {
id Int @id @default(autoincrement())
title String
commentedBy Int
description String
prompt Prompts @relation(fields: [promptId],references: [id])
promptId Int

@@index([promptId])
}