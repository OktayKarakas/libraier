// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  fullName String
  username String @unique
  email String @unique
  description String?
  password String?
  profilePhoto String?
  writedPrompts Prompt[]
  ownedPrompts OwnedPrompt[]
  favoritedPrompts FavoritedPrompt[]
  comments Comment[]
}

model Prompt {
  id String @id @default(uuid())
  writerId String
  updatedAt DateTime @updatedAt
  title String
  favNum Int @default(0)
  commentNum Int @default(0)
  viewNum Int @default(0)
  description String
  details String?
  price Int
  comments Comment[]
  categoryId String
  categoryName String
  tags Tag[]
  ownedByUsers OwnedPrompt[]
  favoritedByUsers FavoritedPrompt[]
  category Category @relation(fields: [categoryId], references: [id])
  writer User @relation(fields: [writerId], references: [id])
}

model OwnedPrompt {
  id String @id @default(uuid())
  userId String
  promptId String
  user User @relation(fields: [userId], references: [id])
  prompt Prompt @relation(fields: [promptId], references: [id])
}

model FavoritedPrompt {
  id String @id @default(uuid())
  userId String
  promptId String
  user User @relation(fields: [userId], references: [id])
  prompt Prompt @relation(fields: [promptId], references: [id])
}

model Comment {
  id String @id @default(uuid())
  userId String
  promptId String
  upVoteNum Int @default(0)
  downVoteNum Int @default(0)
  comment String
  user User @relation(fields: [userId], references: [id])
  prompt Prompt @relation(fields:[promptId],references: [id])
}

model Tag {
  id String @id @default(uuid())
  title String
  promptId String
  prompt Prompt @relation(fields: [promptId], references: [id])
}

model Category {
  id String @id @default(uuid())
  name String
  updatedAt DateTime @updatedAt
  commentNum Int @default(0)
  favNum Int @default(0)
  prompts Prompt[]
}